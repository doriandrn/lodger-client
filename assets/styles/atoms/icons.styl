[data-icon]
  position relative
  white-space nowrap
  // padding-left 36px //  care e rostu? distruge butonu de clear pe sort

  &:before
    icon()
    margin-right 8px

  &.iconOnly
    font-size 0
    size 40px
    border-radius 50px
    padding 0

    &:hover
      background-color: lighten(config.palette.primary, 90%)

    &:before
      size 24px
      mask-size 16px
      margin 0

[data-arrow]
  &:after
    icon()
    mask-image embedurl('~static/icons/ui/chevron-down.svg')

&[data-drop]
  &:after
    mask-image embedurl('~static/icons/ui/chevron-down.svg')

header[data-icon]
  .widget__title
    font-size 0

  &:before
    position absolute
    left 16px
    top 50%
    size 20px
    transform translateY(-50%)
    background-color: config.typography.palette.ui
    mask-size 18px

for i in icons
  [data-icon={i}]
    &:before
      mask-image embedurl('~static/icons/ui/' + i + '.svg')

for se in servicii
  [data-icon={se}]
    &:before
      mask-image embedurl('~static/icons/servicii/' + se + '.svg')
