.tab
  &__switcher
    list-style-type none
    display flex
    flex-flow row wrap
    padding 0

    > li
      padding 10px 20px
      text-transform capitalize
      cursor pointer
      display flex
      flex-flow row nowrap
      align-items center
      color: config.typography.palette.meta

      &:before
        background-color: config.typography.palette.meta

      &[aria-selected="true"]
        font-weight bold