t = config.typography

h1
h2
h3
h4
h5
h6
  font-family: t.fams.headings
  color: t.palette.headings
  font-weight 400

h1
  font-size: t.sizes.default.headings.h1
  line-height 32px
  margin-bottom 24px

h2
  font-size: t.sizes.default.headings.h2
  margin-bottom 12px
  line-height 24px

h3
  font-size: t.sizes.default.headings.h3
  margin-bottom 16px
h4
  font-size: t.sizes.default.headings.h4
  margin-bottom 16px
h5
  font-size: t.sizes.default.headings.h5
  margin-bottom 16px
h6
  font-size: t.sizes.default.headings.h6
  font-weight 400
  text-transform uppercase
  letter-spacing .66px
  margin-bottom 16px
  color: t.palette.paragraphs


body
p
  font-family: t.fams.body
  font-size: t.sizes.default.body
  line-height: t.sizes.baseLineHeight
  color: t.palette.paragraphs

p
  margin-bottom 12px

a
  cursor pointer

.ui
  font-family: t.fams.ui

  p
  a
    font-family: t.fams.ui
    color: t.palette.ui
