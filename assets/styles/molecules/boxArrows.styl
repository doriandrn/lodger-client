[data-box-arrow]
  position relative
  &:before
  &:after
    content ''
    position absolute
    bottom 100%
    left 12px
    size 0
    border-style solid
    border-width 0 7px 7px 7px
    transition opacity .15s ease-in-out
    border-color transparent transparent white transparent
  &:before
    left 11px
    border-width 0 8px 8px 8px
    border-color: transparent transparent config.palette.borders transparent
