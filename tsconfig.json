{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "forms/*": [ "./lodger/forms/*" ],
      "lodger/*": [ "./lodger/*" ],
      "@/*": [ "./*" ],
      "~/*": [ "./*" ],
      "types/*": [ "./lodger/types/*" ]
    },
    "rootDirs": [
      "./"
    ],
    "types": [
      "node",
      "debug",
      "jest"
    ],
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  }
}
